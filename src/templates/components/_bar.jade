	+b.sect-title._has-link
		+e.container.container
			+e.H2.text.title-md Бары
			+e.A.link.link-decor(href='#!')
				+png('binocular')
				+e.SPAN Смотреть барную карту
	+e.container.container
		+e.row
			+e.slider-wrap
				+e.slider.js-bar-slider.owl-carousel
					-
						var barSliderList = [{
						title: '1001 ночь',
						descr: '(Корма средней палубы)',
